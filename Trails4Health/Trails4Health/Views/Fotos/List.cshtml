@model IEnumerable<Trails4Health.Models.Foto>

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>
F<form asp-action="AddFoto">
    <div class="form-horizontal">
        <h4>Foto</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="LocalizacaoId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="LocalizacaoId" class="form-control" asp-items="ViewBag.LocalizacaoId"></select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    <input asp-for="Visivel" />
                    <label asp-for="Visivel"></label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Data" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Data" class="form-control" />
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="EstacaoAnoId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="EstacaoAnoId" class="form-control" asp-items="ViewBag.EstacaoAnoId"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="TipoFotoId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="TipoFotoId" class="form-control" asp-items="ViewBag.TipoFotoId"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Imagem" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Imagem" class="form-control" />
                <span asp-validation-for="Imagem" class="text-danger"></span>
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn btn-primary">Voltar</a>
            </div>
        </div>

    </div>
     
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
