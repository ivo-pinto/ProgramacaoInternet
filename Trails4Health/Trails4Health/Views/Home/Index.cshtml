<form asp-action="ProcurarTrilho" method="get">
    <div class="panel panel-primary" style="margin-top:2ex;">
        <div class="panel-heading">
            <h3 class="panel-title">Procurar Trilho</h3>
        </div>


        <div class="panel-body">
            
            <div class="form-group">
                <label asp-for="Localizacao">Localização:</label>
                <select asp-for="Localizacao" class="form-control">
                    <option value="">Choose an option</option>
                    <option value="true">Guarda</option>
                    <option value="false">Celorico</option>
                    <option value="false">Fundao</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="Dificuldade">Dificuldade:</label>
                <select asp-for="Dificuldade" class="form-control">
                    <option value="">Choose an option</option>
                    <option value="true">Dificil</option>
                    <option value="false">Intermedio</option>
                    <option value="false">Facil</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="Extencao">Extencao:</label>
                <select asp-for="Extencao" class="form-control">
                    <option value="">Choose an option</option>
                    <option value="true">Longo</option>
                    <option value="false">Intermedio</option>
                    <option value="false">Curto</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="Forma">Forma:</label>
                <select asp-for="Forma" class="form-control">
                    <option value="">Choose an option</option>
                    <option value="true">Circular</option>
                    <option value="false">Linear</option>
                </select>
            </div>


            <div asp-validation-summary="All"></div>
        </div>
        <div class="panel-footer">
            <button type="submit" class="btn btn-primary">Procurar</button>
            <button type="reset" class="btn btn-primary">Limpar</button>
        </div>
      
            
    
    </div>
</form>


        
