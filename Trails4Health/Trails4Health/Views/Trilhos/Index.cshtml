@model TrilhosListViewModel

@{
    ViewData["Title"] = "Index";
}

<h2>Trilhos</h2>

<p>
    <a asp-action="Create">Criar Novo Trilho</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    Nome
                </th>
                <th>
                    Inicio
                </th>
                <th>
                    Fim
                </th>
                <th>
                    Altitude Maxima
                </th>
                <th>
                    Altitude Minima
                </th>
                <th>
                    Descricao
                </th>
                <th>
                    Interesse Historico
                </th>
                <th>
                    Beleza Paisagistica
                </th>
                <th>
                    Grau Dificuldade
                </th>
                <th>
                    Duracao Media
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (Trilho item in Model.Trilhos) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Inicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fim)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AltitudeMax)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AltitudeMin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InteresseHistorico)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BelezaPai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GrauDificuldade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DuracaoMedia)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TrilhoId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.TrilhoId">Vizualizar</a> |
                <a asp-action="Delete" asp-route-id="@item.TrilhoId">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>

<div page-model="@Model.PagingInfo"
     css-classes-enabled="true"
     css-class-page="btn btn-sm"
     css-class-page-normal="btn-default"
     css-class-page-selected="btn-primary"
     class=" bg-faded p-4 my-4 pagination mb-0">
</div>

